# NPM Configuration for YYC3 Admin System
# Security settings to prevent vulnerable dependencies

# Enable audit during install
audit=true
audit-level=moderate

# Lock file version
package-lock=true

# Prevent installation of packages with known vulnerabilities
# This will fail the install if high or critical vulnerabilities are found
# Uncomment the line below to enforce strict security
# audit-level=high

# Save exact versions in package.json
save-exact=false

# Use package-lock.json for reproducible builds
package-lock-only=false

# Disable scripts from untrusted packages
ignore-scripts=false

# Security: Always use HTTPS registry
registry=https://registry.npmjs.org/

# Enable strict SSL
strict-ssl=true
